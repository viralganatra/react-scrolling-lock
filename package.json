{
  "name": "react-scrolling-lock",
  "version": "1.0.4",
  "description": "Higher order component for preventing page scrolling outside of a given component",
  "repository": {
    "url": "https://github.com/viralganatra/react-scrolling-lock.git",
    "type": "git"
  },
  "author": "Viral Ganatra <viral@viralganatra.com>",
  "license": "MIT",
  "main": "lib/index.js",
  "keywords": [
    "react",
    "scroll",
    "lock",
    "react-component",
    "hoc"
  ],
  "scripts": {
    "build": "npm run clean && npm run compile",
    "compile": "babel src -d lib --ignore **/*.test.js",
    "clean": "rimraf lib",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:dev": "jest --onlyChanged",
    "test:ci": "npm run lint && npm run test",
    "lint:src": "eslint src",
    "lint": "npm run lint:src",
    "prepublish": "npm run build"
  },
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "invariant": "^2.2.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.0",
    "babel-jest": "^21.0.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "enzyme": "^2.9.1",
    "enzyme-to-json": "^2.0.0",
    "eslint": "^4.7.2",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^21.1.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.3.0",
    "jest": "^21.1.0",
    "jest-cli": "^21.1.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-test-renderer": "^15.6.1",
    "rimraf": "^2.6.2"
  },
  "peerDependencies": {
    "react": "^0.14 || ^15.0"
  },
  "jest": {
    "setupFiles": [
      "./tests/jest-setup.js"
    ],
    "snapshotSerializers": [
      "<rootDir>/node_modules/enzyme-to-json/serializer"
    ]
  }
}
