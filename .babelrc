{
  "env": {
      "development": {
          "presets": [
              "react",
              ["es2015", {
                  "modules": false
              }],
              "stage-0"
          ]
      },
      "test": {
          "presets": [
              "react",
              "es2015",
              "stage-0"
          ],
          "plugins": [
              "transform-runtime",
              "transform-react-constant-elements"
          ]
      },
      "production": {
          "presets": [
              "react",
              ["es2015", {
                  "modules": false
              }],
              "stage-0"
          ],
          "plugins": [
              "transform-runtime",
              "transform-react-constant-elements"
          ]
      }
  }
}
